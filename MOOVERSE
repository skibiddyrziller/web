        <h2>Scripts</h2>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search Scripts..." />
            <button id="searchButton">Search</button>
        </div>
        <div id="results"></div>
        <div id="script-display" style="display:none; margin-top: 20px; text-align: left; max-width: 800px; margin: 20px auto;">
            <h3 id="script-title"></h3>
            <pre id="script-code" style="background: #222; color: #fff; padding: 15px; border-radius: 10px; overflow-x: auto; font-family: 'Courier New', Courier, monospace;"></pre>
            <button id="copy-script" style="background: #ff007f; color: #000; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Copy Script</button>
        </div>
        <button id="load-more" onclick="loadMoreScripts()" style="display:none;">Load More</button>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchButton = document.getElementById('searchButton');
            const copyScriptButton = document.getElementById('copy-script');
            const scriptDisplay = document.getElementById('script-display');
            const scriptTitle = document.getElementById('script-title');
            const scriptCode = document.getElementById('script-code');
            const loadMoreButton = document.getElementById('load-more');
            const resultsDiv = document.getElementById('results');
            let currentPage = 1;
    
            async function fetchScripts(page = 1) {
                const searchInput = document.getElementById('searchInput').value.trim();
                resultsDiv.innerHTML = ''; // Clear previous results
                loadMoreButton.style.display = 'none'; // Hide load more button initially
    
                if (!searchInput) {
                    resultsDiv.innerHTML = '<p>Please enter a search term.</p>';
                    return;
                }
    
                try {
                    const response = await fetch(`https://scriptblox-api-proxy.vercel.app/api/search?q=${encodeURIComponent(searchInput)}&page=${page}`);
                    if (!response.ok) throw new Error(`HTTP Error: ${response.status}`);
                    const data = await response.json();
    
                    if (data?.result?.scripts?.length) {
                        data.result.scripts.forEach(script => {
                            const scriptDiv = createScriptCard(script);
                            resultsDiv.appendChild(scriptDiv);
                        });
                        loadMoreButton.style.display = 'block'; // Show load more button if scripts are found
                    } else {
                        resultsDiv.innerHTML = '<p>No scripts found.</p>';
                    }
                } catch (error) {
                    console.error('Error fetching scripts:', error);
                    resultsDiv.innerHTML = `<p>An error occurred: ${error.message}</p>`;
                }
            }
    
            function createScriptCard(script) {
                const scriptDiv = document.createElement('div');
                scriptDiv.classList.add('script-card');
    
                scriptDiv.innerHTML = `
                    <h3>${script.title}</h3>
                    <p>${script.game.name || 'Unknown Game'}</p>
                    <button style="background: #ff007f; color: #000; padding: 10px; border: none; border-radius: 5px; cursor: pointer;" 
                        onclick="displayScript('${encodeURIComponent(script.title)}', '${encodeURIComponent(script.script)}')">
                        View Script
                    </button>
                `;
                return scriptDiv;
            }
    
            function displayScript(title, code) {
                scriptDisplay.style.display = 'block';
                scriptTitle.textContent = decodeURIComponent(title);
                scriptCode.textContent = decodeURIComponent(code);
            }
    
            function copyToClipboard() {
                const codeText = scriptCode.textContent;
                navigator.clipboard.writeText(codeText)
                    .then(() => alert('Script copied to clipboard!'))
                    .catch(err => console.error('Failed to copy script:', err));
            }
    
            function loadMoreScripts() {
                currentPage++;
                fetchScripts(currentPage);
            }
    
            searchButton.addEventListener('click', () => {
                currentPage = 1;
                fetchScripts();
            });
    
            copyScriptButton.addEventListener('click', copyToClipboard);
        });
    </script>    
